<head>REFUTE</head>
    <list type="altnames">
<item>DISPROVE</item>
<item>PROVE WRONG</item>
<item>PROVE FALSE</item>
<item>DEBUNK</item>
<item>DISCREDIT</item>
<item>INVALIDATE</item>
<item>INFORMAL POKE HOLES IN</item>
