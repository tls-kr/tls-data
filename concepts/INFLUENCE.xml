<head>INFLUENCE</head>
    <list type="altnames">
<item>AFFECT</item>
<item>HAVE AN IMPACT ON</item>
<item>IMPACT</item>
<item>DETERMINE</item>
<item>GUIDE</item>
<item>CONTROL</item>
<item>SHAPE</item>
<item>GOVERN</item>
