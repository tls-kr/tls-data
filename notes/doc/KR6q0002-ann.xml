                <p xml:id="KR6q0002-start">
                    <seg xml:id="KR6q0002_Yan_003-1105a.44">
                        <line>第二智巖、</line>
                        <tls:ann xmlns:tls="http://hxwd.org/ns/1.0" concept="ZEN MONKS" concept-id="uuid-9c34821d-5c94-4128-96d8-9a46f9471f92" xml:id="uuid-b6de739d-120a-4c07-bee4-cf7508a2d8d5">
                            <link target="#KR6q0002_Yan_003-1105a.44 #uuid-15dbc8f0-86c4-45ea-b57a-c201a5010788"/>
                            <tls:text>
                                <tls:srcline title="祖堂集" target="#KR6q0002_Yan_003-1105a.44" pos="3">第二智巖、</tls:srcline>
                                <tls:line title="祖堂集 (en)" src="Christoph Anderl">the second is Zhìyán (577-654),</tls:line>
                            </tls:text>
                            <form corresp="#uuid-3cb5236a-c2dc-42a6-92ba-89e6f7a43e85 #uuid-a35ad267-73e7-4973-bac1-623b591aafab" orig="">
                                <orth>智巖</orth>
                                <pron xml:lang="zh-Latn-x-pinyin">zhì yán</pron>
                            </form>
                            <sense corresp="#uuid-15dbc8f0-86c4-45ea-b57a-c201a5010788">
                                <gramGrp>
                    <pos>N</pos>
  <tls:syn-func corresp="#uuid-c43c0bab-2810-42a4-a6be-e4641d9b6632">NPpr</tls:syn-func>
                </gramGrp>
                                <def>BUDDH: Zhìyán (577-654), a monk in the lineage of Niútóu 牛頭</def>
                            </sense>
                            <tls:metadata resp="#test" created="2019-09-04T11:40:13.466+09:00">
                                <respStmt>
                                    <resp>added</resp>
                                    <name>test</name>
                                </respStmt>
                            </tls:metadata>
                        </tls:ann>
                    </seg>
                    <seg xml:id="KR6q0002_Yan_008-2129a.31">
                        <line>便雲遊方外。</line>
                        <tls:ann xmlns:tls="http://hxwd.org/ns/1.0" concept="ABROAD" concept-id="uuid-9cb1a891-6624-426e-9c54-5906dd554b1c" xml:id="uuid-f79acb7b-703b-48ed-9acb-7b703bb8ed09">
                            <link target="#KR6q0002_Yan_008-2129a.31 #uuid-965b53db-09fa-4355-b24e-674abd3e0c77"/>
                            <tls:text>
                                <tls:srcline title="祖堂集" target="#KR6q0002_Yan_008-2129a.31" pos="4">便雲遊方外。</tls:srcline>
                                <tls:line title="祖堂集 (en)" src="Christoph Anderl">He then went on a travel (as intinerant monk) abroad.</tls:line>
                            </tls:text>
                            <form corresp="#uuid-1a4e039c-6a01-4fca-ad4b-baadc33873fc #uuid-593ad822-d993-4f58-a66f-b3839141944e" orig="">
                                <orth>方外</orth>
                                <pron xml:lang="zh-Latn-x-pinyin">fāng wài</pron>
                            </form>
                            <sense corresp="#uuid-965b53db-09fa-4355-b24e-674abd3e0c77">
                                <gramGrp>
                    <pos>N</pos>
  <tls:syn-func corresp="#uuid-a8e89bab-49e1-4426-b230-0ec7887fd8b4">NP</tls:syn-func>
                </gramGrp>
                                <def>abroad</def>
                            </sense>
                            <tls:metadata resp="#chris" created="2020-02-28T17:23:01.564+09:00">
                                <respStmt>
                                    <resp>added and approved</resp>
                                    <name>chris</name>
                                </respStmt>
                            </tls:metadata>
                        </tls:ann>
                    </seg>
                    <seg xml:id="KR6q0002_Yan_007-2102a.38">
                        <line>師舉：「古來老宿引俗官巡堂云：</line>
                        <tls:ann xmlns:tls="http://hxwd.org/ns/1.0" concept="PAST" concept-id="uuid-3f2acc5c-4d45-4bf5-aad2-3e2139642177" xml:id="uuid-4624d1d0-9f76-4eb9-a4d1-d09f764eb9ca">
                            <link target="#KR6q0002_Yan_007-2102a.38 #uuid-6b24c8e6-273b-4fa1-8af0-849be0dbe343"/>
                            <tls:text>
                                <tls:srcline title="祖堂集" target="#KR6q0002_Yan_007-2102a.38" pos="5">師舉：「古來老宿引俗官巡堂云：</tls:srcline>
                                <tls:line title="祖堂集 (en)" src="Christoph Anderl">"Here are several hundred monks</tls:line>
                            </tls:text>
                            <form corresp="#uuid-e450afbf-3b53-4ceb-8e40-f57519b05ea6 #uuid-9ef8de95-a9bb-45e9-a9eb-4ba693fb26c6" orig="">
                                <orth>古來</orth>
                                <pron xml:lang="zh-Latn-x-pinyin">gǔ lái</pron>
                            </form>
                            <sense corresp="#uuid-6b24c8e6-273b-4fa1-8af0-849be0dbe343">
                                <gramGrp>
                    <pos>V</pos>
  <tls:syn-func corresp="#uuid-18dc1abc-4214-4b4b-b07f-8f25ebe5ece9">VPadN</tls:syn-func>
                </gramGrp>
                                <def>of ancient times</def>
                            </sense>
                            <tls:metadata resp="#CH" created="2020-03-07T18:55:02.109+09:00">
                                <respStmt>
                                    <resp>added and approved</resp>
                                    <name>CH</name>
                                </respStmt>
                            </tls:metadata>
                        </tls:ann>
                    </seg>
                    <seg xml:id="KR6q0002_Yan_001-1028a.9">
                        <line>則擊撾銅，</line>
                        <tls:ann xmlns:tls="http://hxwd.org/ns/1.0" concept="STRIKE" concept-id="uuid-efb80ae1-71c6-435c-bc1b-55f2406b12ea" xml:id="uuid-9eb5b2a0-ef69-444b-b5b2-a0ef69144b9c">
                            <link target="#KR6q0002_Yan_001-1028a.9 #uuid-46caa58c-7315-47e8-8a65-2d47702c9c70"/>
                            <tls:text>
                                <tls:srcline title="祖堂集" target="#KR6q0002_Yan_001-1028a.9" pos="2">則擊撾銅，</tls:srcline>
                                <tls:line title="祖堂集 (en)" transl-id="KR6q0002-en" src="Christoph Anderl">he then struck the a copper plate,</tls:line>
                            </tls:text>
                            <form corresp="#uuid-9f316b31-a6e0-465e-8c10-4c49e09bd184" orig="">
                                <orth>擊</orth>
                                <pron xml:lang="zh-Latn-x-pinyin">jī</pron>
                            </form>
                            <sense corresp="#uuid-46caa58c-7315-47e8-8a65-2d47702c9c70">
                                <gramGrp>
                    <pos>V</pos>
  <tls:syn-func corresp="#uuid-fbfb2371-2537-4a99-a876-41b15ec2463c">vtoN</tls:syn-func>
                    <usg type="warring-states-currency">5</usg>
                </gramGrp>
                                <def>strike, beat (e.g. a dog, a horse, one's breast, or indeed a bell)</def>
                            </sense>
                            <tls:metadata resp="#CH" created="2020-04-23T20:13:28.324+09:00">
                                <respStmt>
                                    <resp>added</resp>
                                    <name notBefore="2020-04-23T20:13:28.324+09:00">CH</name>
                                </respStmt>
                            </tls:metadata>
                        </tls:ann>
                    </seg>
                    <seg xml:id="KR6q0002_Yan_003-1137a.14">
                        <line>座下眾人悉皆頓悟。</line>
                        <tls:ann xmlns:tls="http://hxwd.org/ns/1.0" concept="BE IN" concept-id="uuid-420dd97c-ab79-472c-acb4-60d330ec595e" xml:id="uuid-f8c1347b-0586-4683-8134-7b0586f683a6">
                            <link target="#KR6q0002_Yan_003-1137a.14 #uuid-da35977f-d4de-439f-8ec7-a716b9a2d5e0"/>
                            <tls:text>
                                <tls:srcline title="祖堂集" target="#KR6q0002_Yan_003-1137a.14" pos="1">座下眾人悉皆頓悟。</tls:srcline>
                                <tls:line title="祖堂集 (en)" transl-id="KR6q0002-en" src="Christoph Anderl">All in the assembly got suddenly enlightened.</tls:line>
                            </tls:text>
                            <form corresp="#uuid-67bd5fb2-420f-4c10-b9d1-230e7aa8726d #uuid-e2bc8c65-246b-4b87-bf92-9a624cdbcea7" orig="">
                                <orth>座下</orth>
                                <pron xml:lang="zh-Latn-x-pinyin">zuò xià</pron>
                            </form>
                            <sense corresp="#uuid-da35977f-d4de-439f-8ec7-a716b9a2d5e0">
                                <gramGrp>
                    <pos>V</pos>
  <tls:syn-func corresp="#uuid-68d6c2e0-b86b-4720-9453-c1c41bd0d622">VPt0oN{SUBJ}</tls:syn-func>
                </gramGrp>
                                <def>be in attendance under the Buddhist pulprit</def>
                            </sense>
                            <tls:metadata resp="#chris" created="2020-11-28T19:30:19.035+09:00">
                                <respStmt>
                                    <resp>added</resp>
                                    <name notBefore="2020-11-28T19:30:19.035+09:00">chris</name>
                                </respStmt>
                            </tls:metadata>
                        </tls:ann>
                    </seg>
                    <seg xml:id="KR6q0002_Yan_004-1155a.3">
                        <line>光陰勿虛度。</line>
                        <tls:ann xmlns:tls="http://hxwd.org/ns/1.0" concept="TIME" concept-id="uuid-b7cf3877-654b-4a89-8cee-b86aad030cc0" xml:id="uuid-54104f05-275b-40e9-904f-05275b20e979">
                            <link target="#KR6q0002_Yan_004-1155a.3 #uuid-85990ceb-f6f6-4eea-b435-1a2ee9afb56e"/>
                            <tls:text>
                                <tls:srcline title="祖堂集" target="#KR6q0002_Yan_004-1155a.3" pos="1">光陰勿虛度。</tls:srcline>
                                <tls:line title="祖堂集 (en)" transl-id="KR6q0002-en" src="Christoph Anderl">Do not spent your time in vain!</tls:line>
                            </tls:text>
                            <form corresp="#uuid-235daba0-514e-457e-b1cb-fad34ccf7de3 #uuid-6f367d26-fcb9-4d43-a71e-e38d354e6b90" orig="">
                                <orth>光陰</orth>
                                <pron xml:lang="zh-Latn-x-pinyin">guāng yīn</pron>
                            </form>
                            <sense corresp="#uuid-85990ceb-f6f6-4eea-b435-1a2ee9afb56e">
                                <gramGrp>
                    <pos>N</pos>
  <tls:syn-func corresp="#uuid-db0698e7-db2f-4ee3-9a20-0c2b2e0cebf0">NPab</tls:syn-func>
                </gramGrp>
                                <def>light and shade &gt; the flow of time &gt; time</def>
                            </sense>
                            <tls:metadata resp="#chris" created="2021-01-19T14:05:28.407+09:00">
                                <respStmt>
                                    <resp>added</resp>
                                    <name notBefore="2021-01-19T14:05:28.407+09:00">chris</name>
                                </respStmt>
                            </tls:metadata>
                        </tls:ann>
                    </seg>
                    <seg xml:id="KR6q0002_Yan_004-1184a.28">
                        <line>牛皮也須穿過。」
                    </line>
                        <tls:ann xmlns:tls="http://hxwd.org/ns/1.0" concept="TOPIC MARKER" concept-id="uuid-3f3cdd08-3cfd-413f-bcab-ef13143318dd" xml:id="uuid-490ca3e5-1a2d-478b-8ca3-e51a2dd78bd1">
                            <link target="#KR6q0002_Yan_004-1184a.28 #uuid-c46d7bc7-d9d6-4584-b181-0fbf8d31e5d4"/>
                            <tls:text>
                                <tls:srcline title="祖堂集" target="#KR6q0002_Yan_004-1184a.28" pos="3">牛皮也須穿過。」
                    </tls:srcline>
                                <tls:line title="" transl-id="KR6q0002" src=""/>
                            </tls:text>
                            <form corresp="#uuid-208b48d4-5b38-4edb-8418-80f4dcff11e3" orig="">
                                <orth>也</orth>
                                <pron xml:lang="zh-Latn-x-pinyin">yě</pron>
                            </form>
                            <sense corresp="#uuid-c46d7bc7-d9d6-4584-b181-0fbf8d31e5d4">
                                <gramGrp>
                    <pos>P</pos>
  <tls:syn-func corresp="#uuid-f94f929e-ddfc-4bb3-8f92-9eddfcfbb3d1">ppostadN.+V</tls:syn-func>
  <tls:sem-feat corresp="#uuid-27c25f52-900b-48a9-8ca9-715cb9000e48">N=nonhu</tls:sem-feat>
                    <usg type="warring-states-currency">5</usg>
                </gramGrp>
                                <def resp="#CH" updated="2022-02-19T18:43:35.678+09:00">必也 "what is necessary" after topics other than personal names</def>
                            </sense>
                            <tls:metadata resp="#CH" created="2022-03-19T17:26:28.901+09:00">
                                <respStmt>
                                    <resp>added</resp>
                                    <name notBefore="2022-03-19T17:26:28.901+09:00">CH</name>
                                </respStmt>
                            </tls:metadata>
                        </tls:ann>
                    </seg>
                </p>
