                    <seg xml:id="KR3l0002_tls_001-15a.52">
                        <line>其唯阮嗣宗乎！</line>
                        <tls:ann xmlns:tls="http://hxwd.org/ns/1.0" concept="ONLY" concept-id="uuid-72833a4e-d1ec-471f-806c-64c1e3317aaf" xml:id="uuid-0e7de51e-c60c-4be4-95fb-72a6e08f8504">
                            <link target="#KR3l0002_tls_001-15a.52 #uuid-dda34042-0ee2-4970-8ece-a3c04ff45147"/>
                            <tls:text>
                                <tls:srcline title="劉義慶世說新語" target="#KR3l0002_tls_001-15a.52" pos="1">其唯阮嗣宗乎！</tls:srcline>
                                <tls:line title="劉義慶世說新語 (en)" src="Mather">wouldn't it be Ruǎn Jí?</tls:line>
                            </tls:text>
                            <form corresp="#uuid-4d6c7918-4df1-492f-95db-6e81913b1710 #uuid-da888da1-0d6e-4d5c-a711-60c1c713d85b" orig="">
