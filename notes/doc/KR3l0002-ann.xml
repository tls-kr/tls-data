                    <seg xml:id="KR3l0002_tls_003-6a.43">
                        <line>分定禮儀律令，</line>
                        <tls:ann xmlns:tls="http://hxwd.org/ns/1.0" concept="LAW" concept-id="uuid-699a94f6-628b-44ba-be7a-3454a439b2a0" xml:id="uuid-ae7a97d1-abbf-407d-8d3d-e2e21dc2b9eb">
