                    <seg xml:id="KR2e0001_tls_003-32a.49">
                        <line>賓胥無、
                    </line>
                        <tls:ann xmlns:tls="http://hxwd.org/ns/1.0" concept="ARISTOCRATS OF QI" concept-id="uuid-edb21bf5-7c56-4d54-b5bf-8303f43de2b1" xml:id="uuid-0139ff9a-ab80-428f-b9ff-9aab80028f85">
